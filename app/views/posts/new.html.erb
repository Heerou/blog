<div id="page_wrapper">

	<h1>New Post</h1>
<!-- Cuento los errores que tengo dentro del aplicativo -->
	<%= form_for :post, url: posts_path do |f| %>
	<% if @post.errors.any?  %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post for saving</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg  %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
		<p>
			<%= f.label :tittle %><br>
			<%= f.text_field :tittle %>
		</p>

		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.submit %><br>		
		</p>
	<% end %>
</div>